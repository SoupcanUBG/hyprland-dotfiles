* {
  border: none;
  border-radius: 0;
  min-height: 0;
  font-family: JetBrainsMono Nerd Font;
  font-size: 13px;
  color: #222020; /* dark gray text everywhere */
}

window#waybar {
  background-color: rgba(24, 24, 37, 0.75); /* semi-transparent bar */
  transition-property: background-color;
  transition-duration: 0.5s;
}

window#waybar.hidden {
  opacity: 0.5;
}

/* --- Workspaces --- */
#workspaces {
  background-color: transparent;
}

#workspaces button {
  all: initial;
  min-width: 0;
  padding: 6px 18px;
  margin: 6px 3px;
  border-radius: 4px;
  background-color:   #1e1e2e; /* inactive = white */
  color: #ffffff;
}

#workspaces button.active {
  color: #222020;
  background-color: #cba6f7; /* purple active */
}

#workspaces button:hover {
  box-shadow: inherit;
  text-shadow: inherit;
  color: #222020;
  background-color: #cdd6f4;
}

#workspaces button.urgent {
  background-color: #f38ba8;
}

/* --- Modules --- */
#memory,
#custom-power,
#battery,
#backlight,
#wireplumber,
#network,
#clock,
#tray {
  border-radius: 4px;
  margin: 6px 3px;
  padding: 6px 12px;
  background-color: rgba(30, 30, 46, 0.95); /* semi-solid */
  color: #222020;
}

#custom-power {
  margin-right: 6px;
  background-color: #cba6f7;
  color: #222020;
}

#custom-logo {
  padding-right: 7px;
  padding-left: 7px;
  margin-left: 5px;
  font-size: 15px;
  border-radius: 8px 0px 0px 8px;
  color: #1793d1;
}

#memory { background-color: #fab387; }
#battery { background-color: #f38ba8; }
#battery.warning,
#battery.critical,
#battery.urgent {
  background-color: #ff0000;
  color: #ffff00;
}
#battery.charging {
  background-color: #a6e3a1;
  color: #222020;
}
#backlight { background-color: #fab387; }
#wireplumber { background-color: #cba6f7; }
#network {
  background-color: #94e2d5;
  padding-right: 17px;
}
#clock {
  font-family: JetBrainsMono Nerd Font;
  background-color: #cba6f7;
}

.clock.24hr, .clock.12hr {
  font-family: "JetBrainsMono Nerd Font";
  background-color: #cba6f7;
  color: #222020;
}

tooltip {
  border-radius: 8px;
  padding: 15px;
  background-color: rgba(19, 24, 34, 0.95);
  color:  #1e1e2e;
}

